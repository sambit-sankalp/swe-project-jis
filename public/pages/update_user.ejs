<link rel="stylesheet" href="styles/form.css">
<body class="hero-anime"> 
	<%- include('../include/navbar.ejs') %>
     <div class="container">
            <!-- form handling -->
            <br>
            <br>
            <br>
            <div class="form-title text-center">
                <div class="box-nav d-flex justify-between">
                <a href="/view" class="border-shadow">
                    <span class="text-gradient"><i class="fas fa-angle-double-left"></i>View Cases</span>
                </a>
            </div>
            <h2 class="text-dark">Update Case</h2>
            </div>

<form method="POST" id="update_user">
    <div class="new_user">
           <div class="form-group">
            <input type="hidden" name="id" value="<%= user._id %>">
            <label for="caseNumber" class="text-dark">Case No</label>
            <input type="text" name="caseNumber" value="<%= user.caseNumber %>">
            </div>
            <div class="form-group">
            <label for="date" class="text-dark">Date</label>
            <input type="text" name="date" value="<%= user.date %>">
            </div>
            <div class="form-group">
            <label for="name" class="text-dark">Crime</label>
            <input type="text" name="Crime" value="<%= user.Crime %>" placeholder="Enter crime">
              </div>
            <div class="form-group">
            <label for="name" class="text-dark">  Culprit</label>
            <input type="text" name="Culprit" value="<%= user.Culprit %>" placeholder="Enter name">
              </div>
               <div class="form-group">
            <label for="name" class="text-dark">Victim</label>
            <input type="text" name="Victim" value="<%= user.Victim %>" placeholder="Enter name">
              </div>
        <div class="form-group">
            <label for="status" class="text-dark">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="Status" value="Pending" <%= user.Status == 'Pending' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Pending</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="Status" value="Settled" <%= user.Status == 'Settled' ? 'checked' : '' %>>
                <label for="radio-3" class="radio-label">Settled</label>
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="text-dark">Judgement</label>
            <input type="text" name="Judgement" value="<%= user.Judgement %>" placeholder="Enter verdict">
              </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Update</button>
        </div>
    </div>
 
</form>
      </div>
